@if(IsOpen)
{
    <div id="modal" style="position: fixed; top: 0; left: 0; width: 100vw; height: 100vh; display: grid; place-items: center; z-index: 1000; overflow-y: scroll; padding: 48px; background: rgba(0,0,0,0.4);">
        <div style="background: white;">
            <div style="display: flex; justify-content: right;"><span style="font-size: 2rem; margin-right: 24px; cursor: pointer;" onclick=@OnCloseModal>&times;</span></div>
            @ChildContent
        </div>
    </div>
}

@code {
    [Parameter]
    public bool IsOpen { get; set; } = false;
    [Parameter]
    public RenderFragment? ChildContent { get; set; }
    [Parameter]
    public Action OnCloseModal { get; set; }
}